<script type="text/javascript" language="javascript">
function priceIsNum(){
	var match = /^[0-9]+.?[0-9]*$/;
	var price=document.getElementById("book_price").value;
	if(document.getElementById("book_name").value=="")
	{
		alert("书籍名不能为空");
		return false;
	}
	if(document.getElementById("book_author").value=="")
	{
		alert("作者姓名不能为空");
		return false;
	}
	if(!match.test(price))
	{
		alert("书籍价格必须是数字格式");
		return false;
	}
	return true;
}
</script>
